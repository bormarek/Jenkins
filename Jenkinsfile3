pipeline {
    agent any
    stages {
        stage('Build'){
            steps {
                echo "This is build step"
            }
        }
        stage('Test'){
            steps {
                echo "This is test step"
            }
        }
        stage('Deploy'){
            steps{
                script{
                    echo "This is deploy step ..."
                    def branchName = "${env.BRANCH_NAME}"
                    if(branchName == "master"){
                        println("Deploy to prod")
                    }
                    else if(branchName == "test"){
                        print("Deploying to Test")
                    }
                }
            }
        }
    }
}
